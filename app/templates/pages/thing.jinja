{% extends "pages/.base.jinja" %}

{%block title%}Single thing{%endblock%}

{%block content%}

<section id="things">

      <article>
         <header>
            <h2>

            {{ thing["name"]|capitalize }}

            </h2>
         </header>

         <div id="details">
            <p>{{thing["desc"]}}</p>

            <p>Rating: {{thing["rating"]}}/10</p>

            <p><strong>Cost: ${{thing["cost"]}}.00</strong></p>
         </div>

         <footer>
            <a href="/delete/{{thing['id']}}"">Delete</a>
         </footer>

      </article>


</section>
   
{%endblock%}
